<resources>

    <!-- Base application theme. -->
    <style name="TodoTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TodoTheme.Text">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="TodoTheme.Text.Label">
        <item name="android:textSize">@dimen/text_label</item>
    </style>

    <style name="TodoTheme.Text.Warn">
        <item name="android:textSize">@dimen/text_small_label</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TodoTheme.Text.Large">
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="TodoTheme.Text.Small">
        <item name="android:textSize">@dimen/text_small</item>
    </style>
</resources>
