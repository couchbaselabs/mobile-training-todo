<?xml version="1.0" encoding="utf-8" ?>
<ShellContent xmlns="http://xamarin.com/schemas/2014/forms"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:Training.Views"
       x:Class="Training.Views.TaskListItemPage">
    <Tab Title="Domestic"
             Route="taskListItem"
             Icon="todo.png">
        <ShellContent Route="tasks"
                          Style="{StaticResource TaskListItemShell}"
                          Title="Tasks"
                          Icon="tasks.png"
                          ContentTemplate="{DataTemplate local:TasksPage}" />
        <ShellContent Route="users"
                          Style="{StaticResource TaskListItemShell}"
                          Title="Users"
                          Icon="person.png"
                          ContentTemplate="{DataTemplate local:UsersPage}" />
    </Tab>
</ShellContent>